---
pageable: true
per_page: 10
---


        <div class="col-sm-8 blog-main">
<% page_articles.each_with_index do |article, i| %>
<div class="blog-post">
  <h2 class="blog-post-title"><%= link_to article.title, article %> </h2>
  <p class="blog-post-meta"><%= article.date.strftime('%b %e') %></p>
  <!-- use article.summary(250) if you have Nokogiri available to show just
       the first 250 characters -->
  <%= article.body %>
</div>
<% end %>

<% if paginate && num_pages > 1 %>
  <p>Page <%= page_number %> of <%= num_pages %></p>
  <ul class="pager">


  <% if prev_page %>
    <li><%= link_to 'Previous', prev_page %></li>
  <% end %>
<% end %>

<% if paginate %>
  <% if next_page %>
    <li><%= link_to 'Next', next_page %></li>
  <% end %>
  </ul>
<% end %>



